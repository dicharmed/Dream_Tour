include mixins
//TOP LINE LOG-IN | LOG-OUT
.header-top
    a(class='header-top__link link--color-blue' href='#') Регистрация | Вход
    a(class='header-top__link link--color-blue' href='#')
        i(class='fab fa-vk fa-lg' aria-hidden='true')
    a(class='header-top__link link--color-blue' href='#')
        i(class='fab fa-instagram fa-lg' aria-hidden='true') 

//LOGO & NAVIGATION
.header-main    
    div(class="container header-main__container")       
        div(class="logo")
            a(class="logo__link link--color-blue" href='#')
                img(src=require('../../img/logo.png'), alt="Dream Tour", class="logo-pc")
                //img(src="./src/img/logo-mobile.png", alt="Dream Tour", class="logo-mobile")        
        nav(class="navigation")
            ul.menu                           
                each val in mainMenu                        
                    li.menu-li
                        if val=='Главная'
                            a(href="#" class="active menu__link link--color-blue ")= val 
                        else 
                            a(href="#" class="menu__link link--color-blue")= val 
                            if val== 'Страны'
                                ul(class="submenu submenu-countries")                                   
                                    +subMenu(countries)                                   
                            else if val== 'Туры'
                                ul(class="submenu submenu-tours")                                    
                                    +subMenu(tours)